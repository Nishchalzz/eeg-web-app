<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EEG Seizure Prediction</title>
    <style>
      :root {
        --primary-color: #00a8ff;
        --secondary-color: #057fb8;
        --bg-color: #0a0e14;
        --card-bg: rgba(25, 30, 40, 0.8);
        --text-color: #eaeaea;
        --accent-color: #00a8ff;
        --success-color: #57ff57;
        --error-color: #ff5757;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-color: var(--bg-color);
        color: var(--text-color);
        line-height: 1.6;
        background-image: radial-gradient(
            circle at 10% 20%,
            rgba(0, 168, 255, 0.05) 0%,
            transparent 50%
          ),
          radial-gradient(
            circle at 90% 80%,
            rgba(0, 168, 255, 0.07) 0%,
            transparent 50%
          );
        min-height: 100vh;
        overflow-x: hidden;
      }

      /* Stars background */
      body::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: radial-gradient(white 1px, transparent 1px);
        background-size: 50px 50px;
        opacity: 0.1;
        z-index: -1;
        animation: twinkling 10s linear infinite;
      }

      .container {
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 0;
      }

      header {
        text-align: center;
        margin-bottom: 2rem;
        position: relative;
      }

      h1 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        color: var(--primary-color);
        text-shadow: 0 0 10px rgba(0, 168, 255, 0.5);
        animation: glow 3s ease-in-out infinite alternate;
      }

      h2 {
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
        color: var(--accent-color);
      }

      p {
        margin-bottom: 1rem;
      }

      .card {
        background-color: var(--card-bg);
        border-radius: 12px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }

      .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
      }

      .btn-primary,
      .btn-secondary {
        display: inline-block;
        padding: 0.8rem 1.5rem;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        font-size: 1rem;
      }

      .btn-primary {
        background: var(--primary-color);
        color: #000;
        box-shadow: 0 0 15px rgba(0, 168, 255, 0.5);
      }

      .btn-secondary {
        background: rgba(255, 255, 255, 0.1);
        color: var(--text-color);
        border: 1px solid rgba(255, 255, 255, 0.2);
      }

      .btn-primary:hover {
        background: var(--secondary-color);
        box-shadow: 0 0 20px rgba(0, 168, 255, 0.8);
        transform: translateY(-2px);
      }

      .btn-secondary:hover {
        background: rgba(255, 255, 255, 0.2);
        transform: translateY(-2px);
      }

      .drop-area {
        border: 2px dashed rgba(255, 255, 255, 0.3);
        border-radius: 12px;
        padding: 2.5rem;
        text-align: center;
        margin: 2rem 0;
        transition: all 0.3s ease;
        background-color: rgba(255, 255, 255, 0.03);
        position: relative;
        overflow: hidden;
      }

      .drop-area::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 200%;
        height: 100%;
        background: linear-gradient(
          90deg,
          transparent,
          rgba(0, 168, 255, 0.1),
          transparent
        );
        transition: all 0.5s ease;
      }

      .drop-area:hover::before {
        left: 100%;
      }

      .drop-area.active {
        border-color: var(--primary-color);
        background-color: rgba(0, 168, 255, 0.05);
        box-shadow: 0 0 20px rgba(0, 168, 255, 0.3);
      }

      .file-info {
        margin-top: 1.5rem;
        font-size: 0.9rem;
        opacity: 0;
        transform: translateY(10px);
        transition: all 0.3s ease;
      }

      .file-info.visible {
        opacity: 1;
        transform: translateY(0);
      }

      #file-name {
        font-weight: bold;
        word-break: break-all;
        color: var(--primary-color);
      }

      .hidden {
        display: none;
      }

      .form-actions {
        margin-top: 2rem;
        text-align: center;
      }

      ul {
        list-style-type: none;
        padding-left: 1rem;
      }

      ul li {
        margin-bottom: 0.8rem;
        position: relative;
        padding-left: 1.5rem;
      }

      ul li::before {
        content: "â–¹";
        position: absolute;
        left: 0;
        color: var(--primary-color);
      }

      footer {
        text-align: center;
        margin-top: 3rem;
        padding: 1.5rem 0;
        color: rgba(255, 255, 255, 0.5);
        position: relative;
      }

      footer a {
        color: var(--accent-color);
        text-decoration: none;
      }

      footer a:hover {
        text-decoration: underline;
      }

      .wave {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100px;
        background: url('data:image/svg+xml;utf8,<svg viewBox="0 0 1200 120" xmlns="http://www.w3.org/2000/svg"><path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" fill="%230081c9"/><path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5" fill="%230081c9"/><path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" fill="%230081c9"/></svg>');
        background-size: 1200px 100px;
        background-repeat: repeat-x;
        z-index: -1;
        opacity: 0.1;
        animation: wave 10s linear infinite;
      }

      .chat-container {
        background-color: var(--card-bg);
        border-radius: 12px;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.05);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }

      .chat-container:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
      }

      #chat-output {
        height: 300px;
        overflow-y: auto;
        padding: 1.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      }

      #chat-form {
        display: flex;
        padding: 1rem;
      }

      #chat-input {
        flex: 1;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 25px;
        padding: 0.8rem 1.5rem;
        color: var(--text-color);
        margin-right: 0.5rem;
        font-size: 1rem;
        outline: none;
        transition: all 0.3s ease;
      }

      #chat-input:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 10px rgba(0, 168, 255, 0.3);
      }

      #chat-form button {
        background: var(--primary-color);
        color: #000;
        border: none;
        border-radius: 25px;
        padding: 0.8rem 1.5rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 0 15px rgba(0, 168, 255, 0.3);
      }

      #chat-form button:hover {
        background: var(--secondary-color);
        box-shadow: 0 0 20px rgba(0, 168, 255, 0.5);
        transform: translateY(-2px);
      }

      @keyframes wave {
        0% {
          background-position-x: 0;
        }
        100% {
          background-position-x: 1200px;
        }
      }

      @keyframes twinkling {
        0% {
          opacity: 0.1;
        }
        50% {
          opacity: 0.2;
        }
        100% {
          opacity: 0.1;
        }
      }

      @keyframes glow {
        0% {
          text-shadow: 0 0 5px rgba(0, 168, 255, 0.5);
        }
        100% {
          text-shadow: 0 0 20px rgba(0, 168, 255, 0.8),
            0 0 30px rgba(0, 168, 255, 0.6);
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <header>
        <h1>EEG Analysis System</h1>
        <p>Upload an EDF file to predict seizure occurrences</p>
      </header>

      <main>
        <div class="card">
          <h2>Upload EDF File</h2>
          <form
            action="/predict"
            method="POST"
            enctype="multipart/form-data"
            id="upload-form"
          >
            <div class="drop-area" id="drop-area">
              <p>Drag & drop your EDF file here</p>
              <p>or</p>
              <input
                type="file"
                id="edfFile"
                name="edfFile"
                accept=".edf"
                class="hidden"
                required
              />
              <button type="button" class="btn-secondary" id="select-file">
                Select file
              </button>
              <div class="file-info hidden" id="file-info">
                <p>Selected file: <span id="file-name"></span></p>
              </div>
            </div>

            <div class="form-actions">
              <button type="submit" class="btn-primary">Predict Seizure</button>
            </div>
          </form>
        </div>

        <div class="card">
          <h2>How It Works</h2>
          <p>
            Our seizure prediction system analyzes EEG data using a machine
            learning model trained on temporal lobe seizure patterns. The system
            will:
          </p>
          <ul>
            <li>Extract relevant features from your EDF file</li>
            <li>Apply our pre-trained seizure detection model</li>
            <li>
              Generate a visual representation of the EEG signal and seizure
              probability
            </li>
            <li>Provide a prediction with confidence score</li>
          </ul>
        </div>
      </main>

      <footer>
        <div class="wave"></div>
        <p>&copy; 2025 EEG Analysis System</p>
        <p><a href="/">Back to Home</a></p>
      </footer>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const dropArea = document.getElementById("drop-area");
        const fileInput = document.getElementById("edfFile");
        const selectButton = document.getElementById("select-file");
        const fileInfo = document.getElementById("file-info");
        const fileName = document.getElementById("file-name");

        selectButton.addEventListener("click", function () {
          fileInput.click();
        });

        fileInput.addEventListener("change", function () {
          if (fileInput.files.length > 0) {
            fileName.textContent = fileInput.files[0].name;
            fileInfo.classList.remove("hidden");
            fileInfo.classList.add("visible");
          }
        });

        ["dragenter", "dragover", "dragleave", "drop"].forEach((eventName) => {
          dropArea.addEventListener(
            eventName,
            function (e) {
              e.preventDefault();
              e.stopPropagation();
            },
            false
          );
        });

        ["dragenter", "dragover"].forEach((eventName) => {
          dropArea.addEventListener(
            eventName,
            function () {
              dropArea.classList.add("active");
            },
            false
          );
        });

        ["dragleave", "drop"].forEach((eventName) => {
          dropArea.addEventListener(
            eventName,
            function () {
              dropArea.classList.remove("active");
            },
            false
          );
        });

        dropArea.addEventListener(
          "drop",
          function (e) {
            fileInput.files = e.dataTransfer.files;
            if (fileInput.files.length > 0) {
              fileName.textContent = fileInput.files[0].name;
              fileInfo.classList.remove("hidden");
              fileInfo.classList.add("visible");
            }
          },
          false
        );
      });
    </script>
    <script src="/js/main.js"></script>
  </body>
</html>
